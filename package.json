{
  "name": "cardiac_health_electron",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "description": "AI-Powered Cardiac Health Analysis Dashboard",
  "author": "MedGemma Team",
  "license": "MIT",
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@langchain/community": "^1.1.12",
    "@langchain/core": "^1.1.19",
    "@langchain/langgraph": "^1.1.4",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.6.2",
    "fs-extra": "^11.3.3",
    "hnswlib-node": "^3.0.0",
    "jimp": "^1.6.0",
    "langchain": "^1.2.19",
    "marked": "^17.0.1",
    "node-llama-cpp": "^3.15.1",
    "onnxruntime-node": "^1.24.1",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^5.4.624",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "electron": "^40.2.1",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.medgemma.cardiachealth",
    "productName": "AI4Cardio-Electron",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "!dist",
      "!**/*.py",
      "!**/*.ipynb",
      "!src-tauri/*"
    ],
    "extraResources": [
      {
        "from": "model",
        "to": "model",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "onnx_export",
        "to": "onnx_export",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/node-llama-cpp/**/*",
      "**/node_modules/onnxruntime-node/**/*",
      "**/node_modules/better-sqlite3/**/*"
    ]
  }
}
